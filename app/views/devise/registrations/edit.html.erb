<% content_for :meta_title, "Settings - Substracked" %>
<% content_for :meta_description, "Update your settings on Substracked" %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Settings</h1>
    </div>
    <div class="col-7">
      <h2>Personal settings</h2>
      <p>Please make sure that all your personal information is up-to-date.</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting on confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :password,
                hint: "Leave it blank if you don't wish to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file, label: "Your profile picture" %>
          <%= f.input :current_password,
                hint: "We need your current password to confirm any changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-actions d-flex justify-content-between align-items-center">
          <%= link_to "Back", :back, class: 'btn ps-0' %>
          <%= f.button :submit, "Update", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
    <div class="col-5">
      <div class="mb-5">
        <h2>Notification Settings</h2>
        <p>Please choose the methods on how you wish to be communicated. We will only send notifications regarding your subscriptions.</p>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="notificationSwitch-1" checked>
          <label class="form-check-label" for="notificationSwitch-1">Email</label>
        </div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="notificationSwitch-2">
          <label class="form-check-label" for="notificationSwitch-2">SMS</label>
        </div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="notificationSwitch-3" checked>
          <label class="form-check-label" for="notificationSwitch-3">Line</label>
        </div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="notificationSwitch-4">
          <label class="form-check-label" for="notificationSwitch-4">Telegram</label>
        </div>
      </div>
      <div>
        <h2>Cancel my account</h2>
        <p>Sorry to hear you are unhappy. We will delete your account completely, erasing your personal information from our system.</p>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
