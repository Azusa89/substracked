<div class="container-fluid">
  <div class="row">
    <div class="col-6 px-0 min-vh-100">
      <%= render "shared/animated-background" %>
    </div>
    <div class="col-6 py-5">
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-8 col-12">
          <h2>Forgot your password?</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
            </div>
            <div class="form-actions d-flex justify-content-between align-items-center mt-4">
              <%= link_to "Cancel", root_path, class: "btn btn-clean ps-0" %>
              <%= f.button :submit, "Reset password", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
