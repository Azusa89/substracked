<div class="demo-cards">
  <div class="card demo-card demo-card-1 border-0 shadow-lg flex-row mb-3 active">
    <div class="card-image-container p-3">
      <%= image_tag("resource icons/github.jpg", class: "img-fluid") %>
      <div class="card-status-helper bg-dark opacity-50"></div>
    </div>
    <div class="card-content-container">
      <div class="card-content h-100 d-flex flex-column justify-content-between p-3">
        <div>
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 me-2">
              Github
            </h4>
            <button class="nav-user btn dropdown-toggle p-0" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-ellipsis-vertical fa-fw fa-lg text-secondary"></i>
            </button>
          </div>
          <p><small class="mb-0 text-secondary">Worldwide</small></p>
        </div>
        <div>
          <div class="d-flex justify-content-between align-items-end">
            <small>Renewal on</small>
            <small class="text-end me-2">per year</small>
          </div>
          <div class="d-flex justify-content-between align-items-end">
            <p class="mb-0">12 November 2022</p>
            <p class="mb-0 me-2">¥563</p>
          </div>
        </div>
      </div>
    </div>
  </div>
