<div id="addSubscriptionModal" class="modal fade" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" data-controller="display-plan">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0 align-items-start">
        <h2 class="mb-0">Add <span class="text-primary">subs</span>cription</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%# Form Content %>
      <div class="service-select mx-auto">
        <label for="resources" class="mb-2">Service</label>
        <select name="resources" id="resources" data-display-plan-target="resource" data-action="change->display-plan#display" class="form-select">
          <option value="" label=" "></option>
          <% @pre_resources.each do |resource| %>
            <option value="<%= resource.name %>"><%= resource.name %></option>
          <% end %>
        </select>
      </div>
      <%= simple_form_for(subscription)  do |f| %>
        <div class="modal-body pb-0 border-0 d-none", data-display-plan-target="form">
          <div class="plans", data-display-plan-target="plans">
            <%# <%= f.association :plan, collection: @plans %>
          </div>
          <%= f.input :renewal_date, html5: true %>
          <%= f.input :region, collection: ["Worldwide", "Australia", "Brazil", "France", "Germany", "Hong Kong", "Italy", "Japan", "Singapore", "United States of America", "United Kingdom"], selected: "Japan" %>
          <%= f.input :notes %>
        </div>
        <div class="modal-footer d-flex justify-content-between border-0">
          <div data-display-plan-target="custom" class="text-center mx-auto mt-3">
            <p class="m-0"><small>Can't find your subscription above?</small></p>
            <%= link_to new_subscription_path, class: 'btn text-primary', data_bs_dismiss: 'modal' do %>
              <%= "Add custom subscription" %>
              <%# <i class="fa-solid fa-arrow-right"></i> %>
            <% end %>
          </div>
          <%= f.submit 'Add subscription', class: 'btn btn-primary d-none w-100', data: {display_plan_target: "add"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
