<div id="subscribeSubscriptionModal<%= subscription.id %>" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header mb-4 border-0 align-items-start">
        <h2 class="mb-0">Manage your <span class="text-primary">Subs</span>cription</h2>
        <button type="button" class="btn-close mt-1" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div>
        <% if subscription.status == true %>
          <p>Access your subscription on <%= subscription.plan.resource.name %> to cancel</p>
          <%= link_to "#{subscription.plan.resource.name}" , "#{subscription.plan.resource.url}", class: 'btn btn-primary d-grid gap-2 m-1' %>
        <% else %>
          <p>Access your subscription on <%= subscription.plan.resource.name %> to subscribe</p>
          <%= link_to "#{subscription.plan.resource.name}" , "#{subscription.plan.resource.url}", class: 'btn btn-primary d-grid gap-2 m-1' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
