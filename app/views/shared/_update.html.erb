<div id="editSubscriptionModal<%= subscription.id %>" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header mb-4 border-0 align-items-start">
        <h2 class="mb-0">Edit your Subscription</h2>
        <button type="button" class="btn-close mt-1" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= simple_form_for(subscription) do |f| %>
        <div class="m-3">
          <%= f.input :region, label: 'Region' %>
          <%= f.input :renewal_date, label: 'Renewal Date' %>
          <%= f.association :plan, collection: Plan.where(resource: subscription.plan.resource) %>
        </div>
        <div class="m-3">
        <% if subscription.status == true %>
          <%= f.input :status, as: :boolean, label: "Active - Click to deactivate." %>
        <% else %>
          <%= f.input :status, as: :boolean, label: "Inactive - Click to activate." %>
        <% end %>
        </div>
        <div class="m-3">
          <%= f.input :notes, label: 'Notes' %>
        </div>
        <%= f.button :submit, label: 'Save Changes' %>
      <% end %>
    </div>
  </div>
</div>
